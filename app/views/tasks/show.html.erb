<h2><%= @task.title %></h2>

<p>details: <%= @task.details %></p>

<%= link_to "Back to list", tasks_path %>
<%= link_to "Edit", edit_task_path(@task) %>

<%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
